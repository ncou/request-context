{
    "name": "chiron/request-context",
    "description": "Give it a nice description!",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\RequestContext\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\RequestContext\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0|^8.1",
        "chiron/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "chiron/coding-standard": "^3.0",
        "chiron/container": "^3.5",
        "nyholm/psr7": "^1.3"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse --ansi",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
